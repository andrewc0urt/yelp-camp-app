<% layout('/layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Add New Campground</h1>

	<div class="col-6 offset-3">
		<form action="/campgrounds" method="POST">
			<div class="mb-3">
				<label for="title" class="form-label">Campground Title</label>
				<input type="text" class="form-control" name="campground[title]" id="title" />
			</div>

			<div class="mb-3">
				<label for="location" class="form-label">Location</label>
				<input type="text" class="form-control" name="campground[location]" id="location" />
			</div>

			<div class="mb-3">
				<label for="image" class="form-label"> Image URL</label>
				<input type="text" class="form-control" name="campground[image]" id="image" />
			</div>

			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea
					class="form-control"
					placeholder="Provide a description of the campground..."
					name="campground[description]"
					id="description"
				></textarea>
			</div>

			<div class="mb-3">
				<label for="price" class="form-label">Campground Price (USD)</label>

				<div class="input-group mb-3">
					<span class="input-group-text">$</span>
					<input
						type="text"
						class="form-control"
						aria-label="Amount (to the nearest dollar)"
						name="campground[price]"
						id="price"
					/>
					<span class="input-group-text">.00</span>
				</div>
			</div>

			<button class="btn btn-primary mb-3">Add Campground</button>
		</form>

		<a href="/campgrounds">
			<button class="btn btn-secondary">Go Back</button>
		</a>
	</div>
</div>
